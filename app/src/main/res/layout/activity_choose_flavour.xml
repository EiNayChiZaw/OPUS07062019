<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F7FA"
    tools:context=".DragandDrop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradientlayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway"
                android:paddingTop="10dp"
                android:text="Flavor Options"
                android:textColor="#ffffff"
                android:textSize="25dip"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:orientation="vertical"
            android:background="@color/realwhite">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:text="Choose a cake flavor"
                android:textColor="#afafaf"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choose a Flavor"
            android:paddingTop="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/SFlavor"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:tag="strawberry"
                        android:background="#ff8686"
                        app:srcCompat="@drawable/strawberryf" />

                    <ImageView
                        android:id="@+id/CFlavor"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:tag="chocolate"
                        android:background="#af4d4d"
                        app:srcCompat="@drawable/chocof" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="10sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginLeft="39dp"
                            android:text="STRAWBERRY"
                            android:textColor="#E91E63"
                            android:textSize="21dp" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="93dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="CHOCOLATE"
                            android:textColor="#352626"
                            android:textSize="21dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnfa"
            style="@style/Theme.MaterialButton"
            android:layout_width="147dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corners"
            android:elevation="10dp"
            android:fontFamily="@font/raleway"
            android:text="Next"
            android:textAlignment="center"
            android:textColor="@color/browser_actions_bg_grey"
            android:textSize="18dp"
            android:textStyle="bold"></Button>
    </LinearLayout>

</RelativeLayout>